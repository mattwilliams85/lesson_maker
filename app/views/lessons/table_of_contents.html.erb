
<script type="text/javascript">
function swap(targetId){
  if (document.getElementById){
        target = document.getElementById(targetId);
            if (target.style.display == "none"){
                target.style.display = "";
            } else{
                target.style.display = "none";
            }
  }
}

</script>

<h1> Table of Contents </h1>

<div id="navigation">
  <% @chapters.order('number').each do |chapter| %>
    <li>
      <a href="#" onclick="swap('<%= chapter.id %>');return false;" class="red"><%= chapter.name %></a>
        <% if chapter.lessons.first != nil %>
          <ul id="<%= chapter.id %>" style="display: none;">
            <% chapter.lessons.order('number').each do |lesson| %>
              <li><a href="/content_view/<%= lesson.id %>"> <%= lesson.name %> </a></li>
            <% end %>
          </ul>
        <% end %>
    </li>
  <% end %>
</div>


